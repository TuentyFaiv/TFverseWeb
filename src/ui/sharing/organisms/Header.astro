<header class="header">
  <div class="header__content">
    <a href="/" class="header__brand">
      <span>NAME</span>
    </a>
    <nav class="header__nav">
      <ul class="header__list">
        <li class="header__item">
          <a href="/docs" class="header__link">Documentation</a>
        </li>
        <li class="header__list">
          <a href="/roadmap" class="header__link">Roadmap</a>
        </li>
      </ul>
    </nav>
  </div>
  <a href="https://github.com/TuentyFaiv/generate" class="header__link header__link--icon" target="_blank" rel="noopener noreferrer">
    <img src="/icon-github.png" alt="GitHub" class="header__icon" >
  </a>
</header>

<style lang="postcss">
  .header {
    @apply w-full flex justify-between gap-5 items-center px-4 py-5 md:px-6 lg:px-8 xl:px-10;
    &__content {
      @apply flex items-center justify-start gap-2.5;
    }
    &__brand {
      @apply block;
    }
    &__nav {}
    &__list {
      @apply flex items-center justify-start gap-4;
    }
    &__item {
      @apply w-max;
    }
    &__link {
      @apply block min-w-max;
      &--icon {
        @apply w-8 h-8;
      }
    }
    &__icon {
      @apply block w-full h-full object-contain; 
    }
  }
</style>