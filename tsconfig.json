{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // Logic
      "@typing/*": [
        "src/logic/typing/*"
      ],
      "@icons/*": [
        "src/assets/icons/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ],
      // UI Sharing
      "@sharing/atoms/*": [
        "src/ui/sharing/atoms/*"
      ],
      "@sharing/molecules/*": [
        "src/ui/sharing/molecules/*"
      ],
      "@sharing/organisms/*": [
        "src/ui/sharing/organisms/*"
      ],
      "@sharing/styles/*": [
        "src/ui/sharing/styles/*"
      ],
      "@styles": [
        "src/ui/sharing/styles/app.postcss"
      ],
    }
  }
}